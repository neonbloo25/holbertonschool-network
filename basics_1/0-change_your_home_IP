#!/usr/bin/env bash
# This script updates /etc/hosts to map localhost to 127.0.0.2 and facebook.com to 8.8.8.8

HOSTS_FILE="/etc/hosts"

# Backup original
sudo cp "$HOSTS_FILE" "${HOSTS_FILE}.bak"

# Remove only *specific lines* containing 'localhost' or 'facebook.com'
# Use a temporary file to avoid sed -i issues
TMP_FILE=$(mktemp)

# Keep all lines EXCEPT ones with "localhost" or "facebook.com"
sudo grep -vE '(^|\s)localhost(\s|$)|(^|\s)facebook\.com(\
